<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="hhh.MainPage" BackgroundImageSource="snow2.jpg">

    <StackLayout VerticalOptions="CenterAndExpand" Padding="21"  Margin="0,0,0,0" HorizontalOptions="CenterAndExpand"
                 Orientation="Vertical"   >
       <Image  Source="logooo.png" HorizontalOptions="FillAndExpand"  VerticalOptions="Start"   />
            
        <Label Text="Department of Food Civil Supplies &amp; Consumer Affairs"  Margin="10" FontAttributes="Bold"
               HorizontalTextAlignment="Center"  VerticalTextAlignment="Center"    HorizontalOptions="Center" TextColor="White"
               FontSize="Large"    />
        
         <Button  Text="CLICK HERE TO PERFORM EKYC"      x:Name="pekyc"  Clicked="ad" TextColor="White"
                  CornerRadius="5" WidthRequest="300" BackgroundColor="#184996" FontSize="Medium" FontAttributes="Bold"
                  HorizontalOptions="Center" ></Button>

        <Label  Text="Note: This application is only for the beneficiaries registered under PDS in H.P."
                Margin="0,20,0,0" HorizontalTextAlignment="Center" BackgroundColor="WhiteSmoke"
                TextColor="red" FontAttributes="Bold"  WidthRequest="400" FontSize="Medium" HorizontalOptions="Center" ></Label>
 

    </StackLayout>

</ContentPage>



